                                 </columns>
                              </TableView>
                           </children>
                        </AnchorPane>
                     </content>
                  </Tab>
              </tabs>
            </TabPane>
             <Button fx:id="btnEntry" layoutX="562.0" mnemonicParsing="false" onAction="#NewEntry" prefHeight="39.0" prefWidth="118.0" style="-fx-background-color: #9c8370; -fx-background-radius: 0;" text="Neuer Eintrag" textFill="WHITE" />
